<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:keepScreenOn="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/back_ui"

    tools:context=".login.activities_appshop.SettingActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:background="@color/teal_700" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/il_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מוקי"
                android:textColor="@color/textcolor1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/title_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="שם משתמש :"
                android:textColor="@color/textcolor1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/il_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/il_userName"
            android:background="@color/background1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="התותח"
                android:textColor="@color/textcolor1"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/title_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="כינוי :"
                android:textColor="@color/textcolor1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/il_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_lastName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לא ברור עדיין ..."
                android:textColor="@color/textcolor1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="מין :"
                android:textColor="@color/textcolor1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/il_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_gender"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="noko@poko.com"
                android:textColor="@color/textcolor1"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/title_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="מייל :"
                android:textColor="@color/textcolor1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/il_moto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_mail"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/background1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_moto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" החיים זה מה שהם"
                android:textColor="@color/textcolor1"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/title_moto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="מוטו :"
                android:textColor="@color/textcolor1"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/il_moto"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_margin="16dp"
            android:background="@color/light_green"
            android:text="עדכן פרופיל"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_moto"
            android:layout_gravity="center"
            app:cornerRadius="15dp"
            android:shadowRadius="@integer/material_motion_duration_long_1"
            android:layout_marginStart="@dimen/settings_button_marginStartEnd"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="@dimen/settings_button_marginStartEnd"
            android:layout_marginBottom="@dimen/settings_button_marginTopBottom"
            android:backgroundTint="@color/light_green"
            android:gravity="center"
            android:text="@string/btn_lbl_logout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_textSize" />

    </RelativeLayout>
</ScrollView>

